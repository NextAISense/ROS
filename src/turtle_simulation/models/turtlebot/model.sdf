<?xml version="1.0"?>
<sdf version="1.7">
  <model name="turtlebot">
    <!-- Static property -->
    <static>false</static>

    <!-- Links -->
    <link name="chassis">
    <pose>0 0 0.1 0 0 0</pose> <!-- Raise the chassis above the wheels -->
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>0.5 0.3 0.2</size>
          </box>
        </geometry>
        <material>
          <ambient>0.0 0.5 0.8 1</ambient>
        </material>
      </visual>
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>0.5 0.3 0.2</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <mass>0.010</mass>
      </inertial>
    </link>

    <!-- Add wheels with proper joints -->
    <link name="left_wheel">
    <pose>0.25 0.15 0.05 1.5708 0 0</pose> <!-- x,y,z, roll, pitch, yaw -->
      <visual name="left_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 0.0 0.8 1</ambient>
        </material>
      </visual>
      <collision name="left_wheel_collision">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <mass>0.5</mass>
      </inertial>
    </link>

    <link name="right_wheel">
    <pose>0.25 -0.15 0.05 1.5708 0 0</pose> <!-- Mirror position for the right wheel -->
      <visual name="right_wheel_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.0 0.0 0.8 1</ambient>
        </material>
      </visual>
  <collision name="right_wheel_collision">
    <geometry>
      <cylinder>
        <radius>0.1</radius>
        <length>0.02</length>
      </cylinder>
    </geometry>
  </collision>
  <inertial>
    <mass>0.5</mass>
  </inertial>
</link>
    <!-- Joints -->
    <joint name="left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>left_wheel</child>
      <pose>0.25 0.15 0.05 1.5708 0 0</pose> <!-- Match left wheel pose -->
      <axis>
        <xyz>1 0 0</xyz>
      </axis>
    </joint>
    <joint name="right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>right_wheel</child>
      <pose>0.25 -0.15 0.05 1.5708 0 0</pose> <!-- Match right wheel pose -->
      <axis>
        <xyz>1 0 0</xyz>
      </axis>
    </joint>

    <!-- Add Differential Drive Plugin -->
    <plugin name="gz::sim::systems::DiffDrive" filename="libgz-sim8-diff-drive-system.so">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.3</wheel_separation> <!-- Adjust based on your model -->
      <wheel_radius>0.1</wheel_radius> <!-- Adjust based on your model -->
      <odom_publish_frequency>50</odom_publish_frequency>
      <cmd_vel_topic>/model/turtlebot/cmd_vel</cmd_vel_topic>
      <!-- <always_on>true</always_on>
      <update_rate>0</update_rate> -->
    </plugin>
  </model>
</sdf>